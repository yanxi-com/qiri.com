        <ul class="links clearfix">
            {% area.links.forEach(function(link) { %}
                <li>
                    <a target="_blank" href="{%= link.href %}">{%= link.text %}</a>
                    (<a href="">删</a> <a href="">改</a>)
                </li>
            {% }) %}
            <li><a href="">++++++</a></li>
        </ul>
        </div>
    {% }) %}
